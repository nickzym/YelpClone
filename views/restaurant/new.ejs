<% include ../partials/header %>
  <div class="container">  
    <div class="row">
        <h2 style="text-align:center">Create a New Restaurant</h1>
        <div style="width:35%; margin:25px auto;">
            
            <form action="/restaurants" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name = "name" placeholder="home"></input>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name = "price" placeholder="price" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Location of this place">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name = "image" placeholder="image url"></input>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name = "description" placeholder="description"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
        
        
    </div>
    
 </div>
<% include ../partials/footer%>