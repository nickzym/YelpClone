                    <input class="form-control" type="text" name = "comment[text]" value="<%= comment.text %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
        
        
    </div>
  </div> 

