    <div class="row">
        <h2 style="text-align:center">Edit Comment</h1>
        <div style="width:35%; margin:25px auto;">
            
            <form action="/restaurants/<%= restaurant_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
